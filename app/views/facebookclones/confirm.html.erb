<h1>確認画面</h1>
<%= form_with(model: @facebookclone, url: facebookclones_path, local: true) do |form| %>
  <!-- 確認画面でアップロードした画像を表示させるための記述 -->
  <%= image_tag(@facebookclone.image.url) if @facebookclone.image && @facebookclone.image.url %>
  <%= @facebookclone.content %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :content %>
  <%= form.submit "投稿する" %>
<% end %>

<%= form_with(model:@facebookclone, url:new_facebookclone_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>